<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="MLM Marketing Settings" string="MLM Marketing"
                     data-key="mlm_marketing">

                    <div id="mlm_marketing">
                        <h2>MLM Marketing</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Comissions</span>
                                    <div class="text-muted">
                                        Enter your MLM system comission values
                                    </div><x></x>
                                    <div class="content_group">
                                        <div class="row">
                                            <label for="comission_level_1" class="col-md-3 o_light_label"/>
                                            <field name="comission_level_1"/>
                                        </div>
                                        <div class="row">
                                            <label for="comission_level_2" class="col-md-3 o_light_label"/>
                                            <field name="comission_level_2"/>
                                        </div>
                                        <div class="row">
                                            <label for="comission_level_3" class="col-md-3 o_light_label"/>
                                            <field name="comission_level_3"/>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
